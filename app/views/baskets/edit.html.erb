<% provide(:title, 'Edit  Basket') %>
<h1>Edit Basket</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for @basket do |f| %>
        <% @basket.errors.full_messages.each do |msg| %>
            <%= msg %>  <br>
        <% end %>
        <%= render :partial => 'edit_details', :locals => {:f => f} %>

        <%= f.submit 'Update', class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>